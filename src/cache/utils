from hashlib import md5 


def generate_md5_hash(input_string: str) -> str:
    """
    Generate a 32-character MD5 hash for a given input string.

    Args:
    input_string (str): The string to hash.

    Returns:
    str: The MD5 hash of the input string.
    """
    return md5(input_string.encode()).hexdigest()